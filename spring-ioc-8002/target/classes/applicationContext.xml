<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="personDao" class="com.ahdy.xem.dao.PersonDaoImpl"></bean>

    <!-- 构造器注入 -->
    <bean id="personService1" class="com.ahdy.xem.service.PersonServiceImpl">
        <constructor-arg ref="personDao"></constructor-arg>
    </bean>

    <!-- setter注入 -->
   <bean id="personService2" class="com.ahdy.xem.service.PersonServiceImpl">
        <property name="personDao" ref="personDao"></property>
    </bean>

</beans>